{
  "manifest_version": 2,
  "name": "EpiStream",
  "description": "Twitch Extension for viewers",
  "permissions": [
    "storage",
    "background",
    "notifications",
    "tabs"
  ],
  "version": "1.0",
  "browser_action": {
    "default_popup": "EpiStream.html"
  },
  "icons": {
    "64" : "img/icon.png"
  },
  "background": {
    "scripts": ["background.js", "jquery-3.3.1.min.js"]
  },
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'"
}